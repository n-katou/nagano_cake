<div class="container">
  <h3>商品詳細</h3>
  <div class="row text-center">
    <div class="col-md-4">
      <p>
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </p>
    </div>
    <div class="col-md-8 mx-auto">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税込価格)</td>
          <td><%= @item.price.to_s(:delimited) %>(<%= (@item.price * 1.1).floor.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
        </tr>
      </table>
      <%= link_to "編集する" , edit_admin_item_path(@item.id),class: "btn btn-success" %>
    </div>
  </div>
</div>