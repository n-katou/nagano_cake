<div class="container">
<h3>商品新規登録</h3>
  <div class="row">
  <%= form_with model: @cart_item,url: admin_items_path ,method: :post do |f| %>
    <div class="col">
      <table class= "table table-borderless">
        <tr>
          <th>商品画像</th>
          <th><%= f.file_field :image, accept: "image/*" %></th>
        </tr>
        <tr>
          <th>商品名</th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= f.text_area :introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= f.collection_select :genre_id, Genre.all,:id ,:name, prompt: "--選択してください--" %></th>
        </tr>
        <tr>
          <th>税抜価格</th>
          <th><%= f.text_field :price %></th>
        </tr>
        <tr>
          <th>販売ステータス</th>
        </tr>
      </table>
    </div>
      <%= f.submit "新規登録" , class: "btn btn-success" %>
  <% end %>
  </div>
</div>