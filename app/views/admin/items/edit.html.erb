<div class="container">
  <h1>商品編集</h1>
  <div class="row">
  <%= form_with model: @item, url: admin_item_path(@item.id),method: :patch do |f| %>
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <td>商品画像</td>
            <td> <%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td> <%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all,:id ,:name, prompt: "--選択してください--" %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
  </div>
</div>


