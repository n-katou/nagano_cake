 <div class="container">
  <h2><%= @customer.first_name + @customer.last_name %>さんの会員詳細編集</h2>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @customer,url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <p>会員ID  <%= @customer.id %></p>
        <p>氏名<%= f.text_field :first_name %><%= f.text_field :last_name %></p>
        <p>フリガナ <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></p>
        <p>郵便番号 <%= f.text_field :postal_code %></p>
        <p>住所 <%= f.text_field :address %></p>
        <p>電話番号 <%= f.text_field :telephone_number %></p>
        <p>メールアドレス <%= f.text_field :email %></p>
        <p>
          会員ステータス
          <%= f.radio_button :is_active,"yes" %>
          <%= f.label :is_active,"有効" %>
          <%= f.radio_button :is_active,"no" %>
          <%= f.label :is_active,"退会" %>
        </p>
      <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>
