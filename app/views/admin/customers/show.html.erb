<div class="container">
  <h2><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h2>
  <div class="row">
      <div class="col-md-4">
        <h4>会員ID</h4>
        <h4>氏名</h4>
        <h4>フリガナ</h4>
        <h4>郵便番号</h4>
        <h4>住所</h4>
        <h4>電話番号</h4>
        <h4>メールアドレス</h4>
        <h4>会員ステータス</h4>
      </div>
      <div class="col-md-4">
        <p><%= @customer.id %></p>
        <p><%= @customer.first_name + @customer.last_name %></p>
        <p><%= @customer.first_name_kana + @customer.last_name_kana %></p>
        <p><%= @customer.postal_code %></p>
        <p><%= @customer.address %></p>
        <p><%= @customer.email %></p>
      </div>
  </div>
      <%= link_to "編集する",edit_admin_customer_path(@customer.id) %>
</div>