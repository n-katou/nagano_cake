<div class="container">
  <h1>注文履歴詳細</h1>
  <div class="row">
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <td><strong>購入者</strong></td>
            <td><%= @order.customer.first_name %> <%= @order.customer.last_name %></td>
          </tr>
          <tr>
            <td><strong>注文日</strong></td>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <td><strong>配送先</strong></td>
            <td><%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td>
          </tr>
          <tr>
            <td><strong>支払い方法</strong></td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td><strong>注文ステータス</strong></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
      <table class="table">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= @order.amount_claimed.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>