<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
<a>ジャンル名</a>  <%= f.text_field :name %>   <%= f.submit "新規登録" %>
<% end %>

<table class="table table-hover table-inverse">
  <thead>
    <th>ジャンル</th>
    <th></th>
    <th colspan="2"></th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td> <%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>