<div class="container">
  <h2>会員情報編集</h2>
  <div class="row">
    <div class="col-md-8">
      <table>
      <%= form_with model: @customer,url: update_path(current_customer), method: :patch do |f| %>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :first_name %></td>
        <td><%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :first_name_kana %></td>
        <td><%= f.text_field :last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      </table>
      <%= f.submit "編集内容を保存" %>
      <% end %>
      <%= link_to "退会する", unsubscribe_path(current_customer) %>
    </div>
  </div>
</div>
