<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>注文履歴一覧</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
            <th colspan = "6"></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.address%></td>
              <td>
                <% order.items.each do |item| %>
                  <p><%= item.name %></p>
                <% end %>
              </td>
              <td><%= order.amount_claimed %> </td>
              <td>ステータス</td>
              <td> <%= link_to "表示する", order_path(order.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>