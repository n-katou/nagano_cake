<div class="container" >
  <h1>注文履歴詳細画</h1>
  <div class="row">
    <div class="col-md-8">
      <h3>注文情報</h3>
      <table class="table">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              <%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払い方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class= col-md-4>
      <h3>請求情報</h3>
      <table class= "table">
        <tbody>
          <tr>
            <td>商品の合計</td>
            <td>¥<%= @order.amount_claimed.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>送料</td>
            <td>¥<%= @postage %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td>¥<%= @order.amount_claimed + @postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <div class="row">
    <div class="col-md-12">
      <h3>注文内容</h3>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
            <th colspan = "4"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% @order.items.each do |item| %>
                <p><%= item.name %></p>
              <% end %>
            </td>
            <td>
              <% @order.items.each do |item| %>
                <p><%= (item.price * 1.1).floor %></p>
              <% end %>
            </td>
            <td>
              <% @order.order_items.each do |order_item| %>
                <p><%= order_item.amount %></p>
              <% end %>
            </td>
            <td>
              <% @order.order_items.each do |order_item| %>
                <p><%= (order_item.price * 1.1).floor * order_item.amount %></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  </div>
</div>