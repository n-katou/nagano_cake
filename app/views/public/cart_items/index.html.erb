<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-7">
        <h3>ショッピングカート</h3>
      </div>
      <div class="col-md-5">
        <h3><%= link_to "カートを空にする",destroy_all_path, method: :delete %></h3>
      </div>
    </div>
    <div class="row">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
            <th colspan = "5"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= (cart_item.item.with_tax_price).floor %></td>
            <td>
              <%= form_with model: cart_item ,url: cart_item_path(cart_item.id),method: :patch do |f|  %>
                <%= f.select :amount,*[1..10],prompt: cart_item.amount %>
                <%= f.submit "変更", class: "btn btn-success"  %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id),method: :delete,class: "btn btn-sm btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="row">
      <div class="col-md-8">
        <p><%= link_to "買い物を続ける", root_path %></p>
      </div>
      <div class="col-md-4">
        <table class="table table-bordered">
          <tr>
            <td>
              合計金額
            </td>
            <td>
              <%= @total.to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <% if @cart_items.any? %>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    <% end %>
</div>