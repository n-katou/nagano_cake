<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col8">
      <h1>商品一覧</h1>
      <table class="table table-hover table-inverse">
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_image(100,100) %>
              <% end %>
              <br>
            </td>
            <td>
              <%= item.name %><br>
            </td>
            <td>
              <%= item.price %><br>
            </td>
            <td colspan="4"></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>